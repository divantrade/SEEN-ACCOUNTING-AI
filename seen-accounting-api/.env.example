# ===========================================
# SEEN Accounting API - Environment Variables
# ===========================================

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL="postgresql://seen_user:seen_password@localhost:5432/seen_accounting?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="change-this-to-a-long-random-string"
JWT_EXPIRES_IN="7d"

# Telegram Bots
TELEGRAM_BOT_TOKEN="your-traditional-bot-token"
TELEGRAM_AI_BOT_TOKEN="your-ai-bot-token"
ACCOUNTANT_CHAT_ID="your-accountant-chat-id"

# Google Gemini API
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-2.0-flash"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Timezone
TZ="Europe/Istanbul"
